<h1 class="text-center">Record BP Reading</h1>
<form method="POST">
    <div class="form-group">
        <label for="date">Date</label>
        <input name="date" data-provide="datepicker" class="form-control date" width="276">
    </div>
    <div class="form-group">
        <label for="time">Time</label>
        <input name="time" class="form-control time" width="276">
    </div>
    <div class="form-group w-25">
        <label for="sys">Systolic</label>
        <input name="sys" type="number" class="form-control">
    </div>
    <div class="form-group w-25">
        <label for="dia">Diastolic</label>
        <input name="dia" type="number" class="form-control">
    </div>
    <div class="form-group w-25">
        <label for="pr">Pulse Rate</label>
        <input name="pr" type="number" class="form-control">
    </div>
    <input type="submit" value="submit" class="btn btn-primary">
</form>
<script>
    $(".date").datepicker({
        format: "yyyy-mm-dd"
    });
    $(".time").timepicker()
</script>